#!/bin/bash

set -e

# source the common build functions
SCRIPT_DIR=$(dirname "$0")
source "${SCRIPT_DIR}/ios_build_functions.sh"

function setup ()
{
    if [ -f "${INSTALL_PATH}/maccatalyst/lib/libssl.a" -a \
       -f "${INSTALL_PATH}/maccatalyst/lib/libcrypto.a" -a \
       -d "${INSTALL_PATH}/maccatalyst/include/openssl" -a \
       -f "${INSTALL_PATH}/iphoneos/lib/libssl.a" -a \
       -f "${INSTALL_PATH}/iphoneos/lib/libcrypto.a" -a \
       -d "${INSTALL_PATH}/iphoneos/include/openssl" ]
    then
        echo "No update needed."
        exit 0
    fi

    LIBRARY_NAME="OpenSSL"
}

function build_ssl ()
{
    cp -r "${ROOT_PATH}/External/openssl" "${ARCH_INSTALL_PATH}/openssl"
    pushd "${ARCH_INSTALL_PATH}/openssl" > /dev/null

    HOST="BSD-generic64"
    CONFIG="no-gost no-asm enable-ec_nistp_64_gcc_128"

    ./Configure ${HOST} ${CONFIG} --openssldir="${ARCH_INSTALL_PATH}" >> "${LOG}" 2>&1
    if [ "${ARCH}" == "x86_64-apple-darwin" ]
    then
        perl -i -pe "s|^CC= gcc|CC= ${CLANG} -arch ${CONCRETE_ARCH} -fembed-bitcode -target x86_64-apple-ios13.0-macabi -miphoneos-version-min=13.0 |g" Makefile >> "${LOG}" 2>&1
    else
        perl -i -pe "s|^CC= gcc|CC= ${CLANG} -miphoneos-version-min=${IPHONEOS_DEPLOYMENT_TARGET} -arch ${CONCRETE_ARCH} -fembed-bitcode |g" Makefile >> "${LOG}" 2>&1
    fi
    perl -i -pe "s|^CFLAG= (.*)|CFLAG= -isysroot ${SDKROOT} \$1|g" Makefile >> "${LOG}" 2>&1
    make >> "${LOG}" 2>&1

    make install_sw >> "${LOG}" 2>&1
    popd > /dev/null

    rm -rf "${ARCH_INSTALL_PATH}/openssl"

    if [ "${ARCH}" == "x86_64-apple-darwin" ]
    then
        BUILT_CRYPTO_CATALYST_PATHS+=("${ARCH_INSTALL_PATH}/lib/libcrypto.a")
        BUILT_SSL_CATALYST_PATHS+=("${ARCH_INSTALL_PATH}/lib/libssl.a")
    else
        BUILT_CRYPTO_PATHS+=("${ARCH_INSTALL_PATH}/lib/libcrypto.a")
        BUILT_SSL_PATHS+=("${ARCH_INSTALL_PATH}/lib/libssl.a")
    fi
}

function fat_binary ()
{
    echo "Copying headers & pkg-config files"
    mkdir -p "${INSTALL_PATH}/maccatalyst/include/"
    mkdir -p "${INSTALL_PATH}/iphoneos/include/"
    cp -r "${ARCH_INSTALL_PATH}/include/openssl" "${INSTALL_PATH}/maccatalyst/include/"
    cp -r "${ARCH_INSTALL_PATH}/include/openssl" "${INSTALL_PATH}/iphoneos/include/"
    for pkgfile in "${ARCH_INSTALL_PATH}"/lib/pkgconfig/*.pc; do
      mkdir -p "${INSTALL_PATH}/maccatalyst/lib/pkgconfig/"
      mkdir -p "${INSTALL_PATH}/iphoneos/lib/pkgconfig/"
      cp "${pkgfile}" "${INSTALL_PATH}/maccatalyst/lib/pkgconfig/"
      cp "${pkgfile}" "${INSTALL_PATH}/iphoneos/lib/pkgconfig/"
      perl -i -pe "s|^(prefix=${INSTALL_PATH}).*$|\$1|g" "${INSTALL_PATH}/maccatalyst/lib/pkgconfig/$(basename "${pkgfile}")" >> "${LOG}" 2>&1
      perl -i -pe "s|^(prefix=${INSTALL_PATH}).*$|\$1|g" "${INSTALL_PATH}/iphoneos/lib/pkgconfig/$(basename "${pkgfile}")" >> "${LOG}" 2>&1
    done

    echo "Building fat binary..."

    lipo -create "${BUILT_CRYPTO_PATHS[@]}" -output "${INSTALL_PATH}/iphoneos/lib/libcrypto.a"
    lipo -create "${BUILT_SSL_PATHS[@]}" -output "${INSTALL_PATH}/iphoneos/lib/libssl.a"
    lipo -create "${BUILT_CRYPTO_CATALYST_PATHS[@]}" -output "${INSTALL_PATH}/maccatalyst/lib/libcrypto.a"
    lipo -create "${BUILT_SSL_CATALYST_PATHS[@]}" -output "${INSTALL_PATH}/maccatalyst/lib/libssl.a"

    echo "Building done."
}

build_all_archs setup build_ssl fat_binary
